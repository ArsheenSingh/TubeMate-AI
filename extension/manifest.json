{
  "manifest_version": 3,
  "name": "TubeMate AI",
  "version": "1.3",
  "description": "Chat with YouTube videos on demand!",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/watch*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "TubeMate AI",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}